<body class="container">

  <!--Alert message if save fail-->
  <% if @gossip.errors.any? %>
   <div class="alert alert-danger" role="alert">
     <h4>Your new gossip could not be saved for the following reasons. Please try again.</h4>
     <hr>
     <p class="mb-0">
       <% @gossip.errors.full_messages.each do |message| %>
       <li><%= message %></li>
       <% end %>
     </p>
   </div>
   <% end %>
   <br/>

  <!--form for new gossip -->
  <%= form_tag url_for(action: 'create'), method: "post" do %>

    <%= label_tag 'Title of your new Gossip?' %>
    <%= text_field_tag 'title' %>
    <br /> <br />

    <%= label_tag 'Some crispy content:' %>
    <%= text_area_tag 'content' %>
    <br /> <br />

    <%= submit_tag "Create Gossip" %>

  <% end %>


</body>
