<body class="container">

<h1> Page Modification Potin </h1>

  <!--Alert message if save fail-->
  <% if @gossip.errors.any? %>
   <div class="alert alert-danger" role="alert">
     <h4>Your new gossip could not be saved for the following reasons. Please try again.</h4>
     <hr>
     <p class="mb-0">
       <% @gossip.errors.full_messages.each do |message| %>
       <li><%= message %></li>
       <% end %>
     </p>
   </div>
   <% end %>
   <br/>

  <!--form completed with gossip data, fields can be modified for update -->
  <%= form_tag url_for(action: 'update'), method: "patch" do %>

    <%= label_tag 'Title of your new Gossip?' %>
    <%= text_field_tag 'title', @gossip.title %>
    <br /> <br />

    <%= label_tag 'Some crispy content:' %>
    <%= text_area_tag 'content', @gossip.content %>
    <br /> <br />

    <%= hidden_field_tag 'id', "#{@gossip.id}" %>
    <%= submit_tag "Update Gossip" %>

  <% end %>

</body>
