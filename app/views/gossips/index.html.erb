<body class="container">

<h1> Bienvenu sur le site Gossip </h1>
<h2> Tu trouveras ici tous les derniers gossips les plus croustillants! </h2><br/>

<!-- button create new gossip -->
<button type="button" class="btn btn-outline-primary btn-lg"><%= link_to "Create a new gossip", new_gossip_path %></button>

<!--Alert message if new gossip successfully saved-->
<% if alert == "success" %>
 <div class="alert alert-success" role="alert">
   <p>Your gossip has been correctly saved.</p>
 </div>
 <% end %>
 <br/>

<div class="row">
  <% Gossip.all.each do |g| %>

  <div class="card col-md-3 m-2">
    <div class="card-header">
      <%= link_to "Gossip nÂ° #{g.id}", gossip_path(g.id) %>
    </div>
    <div class="card-body">
      <blockquote class="blockquote mb-0">
        <p> <%= g.title %> </p>
        <footer class="blockquote-footer"> by <%= g.author.first_name %> <%= g.author.last_name %> </footer>
      </blockquote>
    </div>
  </div>
  <br/>

  <% end %>
</div>




</body>
